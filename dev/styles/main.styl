@import "normalize"
@import "fonts"

font-size(_size)
  if typeof(_size) == 'unit'
    if unit(_size) == 'rem'
      font-size (_size*10)px
  font-size _size

*
  box-sizing: border-box
  position: relative

html
  font-size: 62.5%
  height: 100%
  width: 100%

body
  background: #0F3F5E url(../images/worldmap.png) no-repeat
  color: white
  font-family: 'Open Sans', "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
  margin: 0

strong
  font-weight: 700

.container
  padding: 220px 30px 170px
  margin-left: auto
  margin-right: auto
  max-width: 1000px

.site-header
  left: 0
  margin: 50px auto 0
  max-width: 1000px
  padding-left: 30px
  padding-right: 30px
  position: absolute
  right: 0
  top: 0

.logo
  background: transparent url(../images/logo.png) no-repeat
  display: inline-block
  height: 75px
  text-indent: -9999px
  width: 303px

.intro
  width: 70%
  h2
    font-size 5.0rem
    font-weight: 800
    margin: 0
    text-transform: uppercase
  h3
    font-size 2.7rem
    font-weight: 400
    margin: 0
  p
    font-size 1.6rem
    font-weight: 400
    line-height: 1.5
    margin: 45px 0 25px 0
    opacity: 0.9
    a
      color: #EE3A67

.icon-social
  color: white
  font-family: "Social"
  font-size 6.0rem
  font-weight: 400
  opacity: 0.5
  padding-right: 10px
  text-decoration: none
  transition: all .25s ease
  -webkit-font-smoothing: antialiased
  &:hover
    opacity: 1